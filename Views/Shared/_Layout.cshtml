<!DOCTYPE html>
<html lang="it">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Online Industrial Monitor</title>

    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 24 24%22 fill=%22%233b82f6%22><path d=%22M12,3C7.58,3 4,4.79 4,7C4,9.21 7.58,11 12,11C16.42,11 20,9.21 20,7C20,4.79 16.42,3 12,3M4,9V12C4,14.21 7.58,16 12,16C16.42,16 20,14.21 20,12V9C20,11.21 16.42,13 12,13C7.58,13 4,11.21 4,9M4,14V17C4,19.21 7.58,21 12,21C16.42,21 20,19.21 20,17V14C20,16.21 16.42,18 12,18C7.58,18 4,16.21 4,14Z%22/></svg>">

    <!-- CSS Dependencies -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" rel="stylesheet">

    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <!-- Preload critical resources -->
    <link rel="preload" href="~/js/toast.js" as="script">

    <style>
        /* Critical CSS for immediate rendering */
        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
            background: linear-gradient(135deg, #0a0a0a 0%, #1a1a1a 100%);
            background-attachment: fixed;
            color: #e0e0e0;
            line-height: 1.6;
            -webkit-font-smoothing: antialiased;
            -moz-osx-font-smoothing: grayscale;
            overflow-x: hidden;
        }

        /* Loading overlay */
        .page-loader {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: linear-gradient(135deg, #0a0a0a 0%, #1a1a1a 100%);
            display: flex;
            align-items: center;
            justify-content: center;
            z-index: 9999;
            transition: opacity 0.5s ease-out;
        }

        .loader-content {
            text-align: center;
            color: #e0e0e0;
        }

        .loader-spinner {
            width: 40px;
            height: 40px;
            border: 3px solid rgba(59, 130, 246, 0.3);
            border-top: 3px solid #3b82f6;
            border-radius: 50%;
            animation: spin 1s linear infinite;
            margin: 0 auto 1rem;
        }

        @@keyframes spin {
            0%

        {
            transform: rotate(0deg);
        }

        100% {
            transform: rotate(360deg);
        }

        }

        /* Navigation improvements */
        .navbar-modern {
            background: rgba(45, 45, 45, 0.95) !important;
            backdrop-filter: blur(20px);
            -webkit-backdrop-filter: blur(20px);
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
            padding: 0.75rem 0;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
            position: sticky;
            top: 0;
            z-index: 1030;
        }

        .navbar-brand-modern {
            font-weight: 700;
            font-size: 1.5rem;
            color: #ffffff !important;
            text-decoration: none;
            display: flex;
            align-items: center;
            gap: 0.75rem;
            transition: all 0.25s ease-out;
            padding: 0.5rem 0;
        }

            .navbar-brand-modern:hover {
                color: #3b82f6 !important;
                transform: scale(1.02);
            }

        .brand-icon {
            width: 32px;
            height: 32px;
            transition: transform 0.25s ease-out;
        }

        .navbar-brand-modern:hover .brand-icon {
            transform: rotate(5deg) scale(1.1);
        }

        .nav-link-modern {
            color: #b0b0b0 !important;
            font-weight: 500;
            padding: 0.5rem 1rem !important;
            border-radius: 0.5rem;
            transition: all 0.15s ease-out;
            position: relative;
            margin: 0 0.25rem;
        }

            .nav-link-modern::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                bottom: 0;
                background: rgba(59, 130, 246, 0.1);
                border-radius: 0.5rem;
                transform: scaleX(0);
                transition: transform 0.25s ease-out;
                z-index: -1;
            }

            .nav-link-modern:hover::before,
            .nav-link-modern.active::before {
                transform: scaleX(1);
            }

            .nav-link-modern:hover,
            .nav-link-modern.active {
                color: #3b82f6 !important;
            }

            .nav-link-modern.active {
                background: rgba(59, 130, 246, 0.15);
            }

        /* Status indicator in navbar */
        .system-status {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            padding: 0.375rem 0.75rem;
            background: rgba(16, 185, 129, 0.1);
            border: 1px solid rgba(16, 185, 129, 0.3);
            border-radius: 0.5rem;
            color: #10b981;
            font-size: 0.875rem;
            font-weight: 500;
        }

        .status-pulse {
            width: 8px;
            height: 8px;
            background: currentColor;
            border-radius: 50%;
            animation: pulse 2s infinite;
        }

        @@keyframes pulse {
            0%, 100%

        {
            opacity: 1;
        }

        50% {
            opacity: 0.3;
        }

        }

        /* Main content area */
        .main-content {
            min-height: calc(100vh - 80px);
            padding-top: 2rem;
        }

        /* Footer */
        .footer-modern {
            background: rgba(29, 29, 29, 0.8);
            backdrop-filter: blur(10px);
            border-top: 1px solid rgba(255, 255, 255, 0.1);
            padding: 2rem 0;
            margin-top: 4rem;
            color: #9ca3af;
        }

        .footer-content {
            display: flex;
            justify-content: space-between;
            align-items: center;
            flex-wrap: wrap;
            gap: 1rem;
        }

        .footer-links {
            display: flex;
            gap: 2rem;
        }

            .footer-links a {
                color: #9ca3af;
                text-decoration: none;
                font-size: 0.875rem;
                transition: color 0.15s ease-out;
            }

                .footer-links a:hover {
                    color: #3b82f6;
                }

        /* Mobile optimizations */
        @@media (max-width: 768px) {
            .navbar-brand-modern

        {
            font-size: 1.25rem;
        }

        .brand-icon {
            width: 28px;
            height: 28px;
        }

        .system-status {
            display: none;
        }

        .footer-content {
            flex-direction: column;
            text-align: center;
        }

        .main-content {
            padding-top: 1rem;
        }

        }

        /* Accessibility improvements */
        @@media (prefers-reduced-motion: reduce) {
            *, *::before, *::after

        {
            animation-duration: 0.01ms !important;
            animation-iteration-count: 1 !important;
            transition-duration: 0.01ms !important;
        }

        }

        /* High contrast mode support */
        @@media (prefers-contrast: high) {
            .navbar-modern

        {
            border-bottom: 2px solid #ffffff;
        }

        .nav-link-modern {
            border: 1px solid transparent;
        }

            .nav-link-modern:hover,
            .nav-link-modern.active {
                border-color: #3b82f6;
            }

        }
    </style>
</head>
<body>
    <!-- Page Loader -->
    <div class="page-loader" id="pageLoader">
        <div class="loader-content">
            <div class="loader-spinner"></div>
            <div>Caricamento Sistema...</div>
        </div>
    </div>

    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-modern">
        <div class="container-fluid">
            <!-- Brand -->
            <a class="navbar-brand-modern" href="@Url.Action("Index", "Home")" id="navbarBrandTitle">
                <svg class="brand-icon" viewBox="0 0 24 24" fill="currentColor">
                    <path d="M12,3C7.58,3 4,4.79 4,7C4,9.21 7.58,11 12,11C16.42,11 20,9.21 20,7C20,4.79 16.42,3 12,3M4,9V12C4,14.21 7.58,16 12,16C16.42,16 20,14.21 20,12V9C20,11.21 16.42,13 12,13C7.58,13 4,11.21 4,9M4,14V17C4,19.21 7.58,21 12,21C16.42,21 20,19.21 20,17V14C20,16.21 16.42,18 12,18C7.58,18 4,16.21 4,14Z" />
                </svg>
                <span>Online Monitor</span>
            </a>

            <!-- Mobile Toggle -->
            <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <!-- Navigation Links -->
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link-modern @(ViewContext.RouteData.Values["Action"]?.ToString() == "Index" ? "active" : "")"
                           asp-controller="Home" asp-action="Index">
                            <i class="fas fa-home me-2"></i>
                            Dashboard
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link-modern @(ViewContext.RouteData.Values["Action"]?.ToString() == "OpcUa" ? "active" : "")"
                           asp-controller="Home" asp-action="OpcUa">
                            <i class="fas fa-plug me-2"></i>
                            OPC UA
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link-modern @(ViewContext.RouteData.Values["Action"]?.ToString() == "Storico" ? "active" : "")"
                           asp-controller="Home" asp-action="Storico">
                            <i class="fas fa-chart-line me-2"></i>
                            Storico
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link-modern @(ViewContext.RouteData.Values["Action"]?.ToString() == "Ricette" ? "active" : "")"
                           asp-controller="Home" asp-action="Ricette">
                            <i class="fas fa-book me-2"></i>
                            Ricette
                        </a>
                    </li>
                </ul>

                <!-- System Status -->
                <div class="d-flex align-items-center">
                    <div class="system-status" id="systemStatus">
                        <div class="status-pulse"></div>
                        <span>Sistema Operativo</span>
                    </div>
                </div>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <main class="main-content">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="footer-modern">
        <div class="container-fluid">
            <div class="footer-content">
                <div class="footer-info">
                    <div class="d-flex align-items-center gap-2 mb-2">
                        <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                            <path d="M12,3C7.58,3 4,4.79 4,7C4,9.21 7.58,11 12,11C16.42,11 20,9.21 20,7C20,4.79 16.42,3 12,3M4,9V12C4,14.21 7.58,16 12,16C16.42,16 20,14.21 20,12V9C20,11.21 16.42,13 12,13C7.58,13 4,11.21 4,9M4,14V17C4,19.21 7.58,21 12,21C16.42,21 20,19.21 20,17V14C20,16.21 16.42,18 12,18C7.58,18 4,16.21 4,14Z" />
                        </svg>
                        <strong>Online Industrial Monitor</strong>
                    </div>
                    <small>Sistema di monitoraggio industriale avanzato</small>
                </div>

                <div class="footer-links">
                    <a href="@Url.Action("Privacy", "Home")">Privacy</a>
                    <a href="#" onclick="showSystemInfo()">Info Sistema</a>
                    <a href="#" onclick="showKeyboardShortcuts()">Scorciatoie</a>
                </div>

                <div class="footer-stats">
                    <small>
                        <i class="fas fa-clock me-1"></i>
                        <span id="systemUptime">Sistema avviato</span>
                    </small>
                </div>
            </div>
        </div>
    </footer>

    <!-- Easter Egg Modal -->
    <div class="modal fade" id="easterEggModal" tabindex="-1" aria-labelledby="easterEggModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="easterEggModalLabel">
                        🐵 Stai Sereno
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body text-center p-4">
                    <img src="~/images/monkey.gif" alt="Monkey GIF" class="img-fluid rounded" style="max-width: 300px;" />
                    <p class="mt-3 text-muted">Hai trovato l'easter egg! 🎉</p>
                </div>
            </div>
        </div>
    </div>

    <!-- System Info Modal -->
    <div class="modal fade" id="systemInfoModal" tabindex="-1">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">
                        <i class="fas fa-info-circle me-2"></i>
                        Informazioni Sistema
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="row g-4">
                        <div class="col-md-6">
                            <div class="glass-card p-3">
                                <h6 class="text-primary mb-3">
                                    <i class="fas fa-server me-2"></i>
                                    Sistema
                                </h6>
                                <ul class="list-unstyled mb-0">
                                    <li><strong>Versione:</strong> 2.0.0</li>
                                    <li><strong>Framework:</strong> .NET 9.0</li>
                                    <li><strong>Database:</strong> MySQL 8.4</li>
                                    <li><strong>Ambiente:</strong> <span id="environmentInfo">Produzione</span></li>
                                </ul>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="glass-card p-3">
                                <h6 class="text-success mb-3">
                                    <i class="fas fa-chart-bar me-2"></i>
                                    Statistiche
                                </h6>
                                <ul class="list-unstyled mb-0">
                                    <li><strong>Macchine:</strong> <span id="totalMachinesInfo">-</span></li>
                                    <li><strong>Connessioni OPC:</strong> <span id="opcConnectionsInfo">-</span></li>
                                    <li><strong>Ricette:</strong> <span id="recipesInfo">-</span></li>
                                    <li><strong>Uptime:</strong> <span id="uptimeInfo">-</span></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Keyboard Shortcuts Modal -->
    <div class="modal fade" id="shortcutsModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">
                        <i class="fas fa-keyboard me-2"></i>
                        Scorciatoie Tastiera
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="row g-3">
                        <div class="col-12">
                            <div class="d-flex justify-content-between align-items-center py-2 border-bottom">
                                <span>Dashboard</span>
                                <kbd class="bg-primary">Alt + 1</kbd>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="d-flex justify-content-between align-items-center py-2 border-bottom">
                                <span>OPC UA</span>
                                <kbd class="bg-primary">Alt + 2</kbd>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="d-flex justify-content-between align-items-center py-2 border-bottom">
                                <span>Storico</span>
                                <kbd class="bg-primary">Alt + 3</kbd>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="d-flex justify-content-between align-items-center py-2 border-bottom">
                                <span>Ricette</span>
                                <kbd class="bg-primary">Alt + 4</kbd>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="d-flex justify-content-between align-items-center py-2 border-bottom">
                                <span>Ricerca</span>
                                <kbd class="bg-primary">Ctrl + K</kbd>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="d-flex justify-content-between align-items-center py-2">
                                <span>Aiuto</span>
                                <kbd class="bg-primary">F1</kbd>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/toast.js" asp-append-version="true"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        // Enhanced page initialization
        document.addEventListener('DOMContentLoaded', function() {
            initializeLayout();
            initializeEasterEgg();
            initializeKeyboardShortcuts();
            initializeSystemMonitoring();

            // Hide page loader with smooth transition
            setTimeout(() => {
                const loader = document.getElementById('pageLoader');
                if (loader) {
                    loader.style.opacity = '0';
                    setTimeout(() => {
                        loader.style.display = 'none';
                    }, 500);
                }
            }, 800);
        });

        function initializeLayout() {
            // Initialize navbar collapse behavior
            const navbarToggler = document.querySelector('.navbar-toggler');
            const navbarCollapse = document.querySelector('.navbar-collapse');

            if (navbarToggler && navbarCollapse) {
                navbarToggler.addEventListener('click', function() {
                    const isExpanded = this.getAttribute('aria-expanded') === 'true';
                    this.setAttribute('aria-expanded', !isExpanded);
                });
            }

            // Auto-hide mobile nav on link click
            document.querySelectorAll('.nav-link-modern').forEach(link => {
                link.addEventListener('click', () => {
                    const collapse = bootstrap.Collapse.getInstance(navbarCollapse);
                    if (collapse && window.innerWidth < 992) {
                        collapse.hide();
                    }
                });
            });

            // Smooth scroll for anchor links
            document.querySelectorAll('a[href^="#"]').forEach(anchor => {
                anchor.addEventListener('click', function(e) {
                    const target = document.querySelector(this.getAttribute('href'));
                    if (target) {
                        e.preventDefault();
                        target.scrollIntoView({
                            behavior: 'smooth',
                            block: 'start'
                        });
                    }
                });
            });
        }

        function initializeEasterEgg() {
            const navbarBrand = document.getElementById('navbarBrandTitle');
            let clickCount = 0;
            let clickTimer = null;
            const requiredClicks = 5;
            const clickTimeoutDuration = 1500;

            if (navbarBrand) {
                navbarBrand.addEventListener('click', function(event) {
                    event.preventDefault();
                    clickCount++;

                    // Visual feedback
                    this.style.transform = 'scale(0.95)';
                    setTimeout(() => {
                        this.style.transform = 'scale(1.02)';
                        setTimeout(() => {
                            this.style.transform = 'scale(1)';
                        }, 100);
                    }, 100);

                    clearTimeout(clickTimer);
                    clickTimer = setTimeout(() => {
                        clickCount = 0;
                    }, clickTimeoutDuration);

                    if (clickCount === requiredClicks) {
                        const modal = new bootstrap.Modal(document.getElementById('easterEggModal'));
                        modal.show();
                        clickCount = 0;
                        clearTimeout(clickTimer);
                    }
                });
            }
        }

        function initializeKeyboardShortcuts() {
            document.addEventListener('keydown', function(e) {
                // Alt + Number shortcuts
                if (e.altKey && !e.ctrlKey && !e.shiftKey) {
                    switch(e.key) {
                        case '1':
                            e.preventDefault();
                            window.location.href = '@Url.Action("Index", "Home")';
                            break;
                        case '2':
                            e.preventDefault();
                            window.location.href = '@Url.Action("OpcUa", "Home")';
                            break;
                        case '3':
                            e.preventDefault();
                            window.location.href = '@Url.Action("Storico", "Home")';
                            break;
                        case '4':
                            e.preventDefault();
                            window.location.href = '@Url.Action("Ricette", "Home")';
                            break;
                    }
                }

                // Ctrl + K for search (future feature)
                if (e.ctrlKey && e.key === 'k') {
                    e.preventDefault();
                    Toast.info('Funzione di ricerca in arrivo', 'Prossimamente');
                }

                // F1 for help
                if (e.key === 'F1') {
                    e.preventDefault();
                    showKeyboardShortcuts();
                }
            });
        }

        function initializeSystemMonitoring() {
            // Update system uptime
            const startTime = new Date();
            const uptimeElement = document.getElementById('systemUptime');

            if (uptimeElement) {
                setInterval(() => {
                    const now = new Date();
                    const diff = now - startTime;
                    const hours = Math.floor(diff / (1000 * 60 * 60));
                    const minutes = Math.floor((diff % (1000 * 60 * 60)) / (1000 * 60));
                    uptimeElement.textContent = `${hours}h ${minutes}m`;
                }, 60000);
            }

            // Monitor system status
            monitorSystemHealth();
            setInterval(monitorSystemHealth, 30000); // Check every 30 seconds
        }

        function monitorSystemHealth() {
            const statusElement = document.getElementById('systemStatus');
            if (!statusElement) return;

            // Simple health check - in a real app, this would call an API
            const isHealthy = navigator.onLine;

            if (isHealthy) {
                statusElement.className = 'system-status';
                statusElement.style.background = 'rgba(16, 185, 129, 0.1)';
                statusElement.style.borderColor = 'rgba(16, 185, 129, 0.3)';
                statusElement.style.color = '#10b981';
                statusElement.querySelector('span').textContent = 'Sistema Operativo';
            } else {
                statusElement.style.background = 'rgba(239, 68, 68, 0.1)';
                statusElement.style.borderColor = 'rgba(239, 68, 68, 0.3)';
                statusElement.style.color = '#ef4444';
                statusElement.querySelector('span').textContent = 'Connessione Persa';
            }
        }

        // Modal functions
        function showSystemInfo() {
            // Populate with real data
            document.getElementById('environmentInfo').textContent =
                '@Html.Raw(Environment.GetEnvironmentVariable("ASPNETCORE_ENVIRONMENT") ?? "Produzione")';

            const modal = new bootstrap.Modal(document.getElementById('systemInfoModal'));
            modal.show();
        }

        function showKeyboardShortcuts() {
            const modal = new bootstrap.Modal(document.getElementById('shortcutsModal'));
            modal.show();
        }

        // Enhanced error handling
        window.addEventListener('error', function(e) {
            console.error('JavaScript Error:', e.error);
            Toast.error('Si è verificato un errore inaspettato', 'Errore Sistema');
        });

        window.addEventListener('unhandledrejection', function(e) {
            console.error('Unhandled Promise Rejection:', e.reason);
            Toast.error('Errore di comunicazione con il server', 'Errore Rete');
        });

        // Performance monitoring
        window.addEventListener('load', function() {
            if ('performance' in window) {
                const perfData = performance.timing;
                const loadTime = perfData.loadEventEnd - perfData.navigationStart;
                console.log(`Page loaded in ${loadTime}ms`);

                if (loadTime > 3000) {
                    Toast.warning('Caricamento lento rilevato', 'Performance');
                }
            }
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>